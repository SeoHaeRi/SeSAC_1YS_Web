<body>
    <form action="/postValidation" method="post" name="login">
        <input type="text" name="id" placeholder="ID" pattern="^([a-zA-Z0-9가-힣]){4,15}$" title="대소문자, 한글, 숫자, 4-15자"
            required>
        <input type="password" name="pw" placeholder="PW" pattern="^([a-zA-Z0-9]){8,15}$" title="대소문자, 숫자로 8-15자"
            required>
        <button type="submit">로그인</button>
    </form>
</body>

